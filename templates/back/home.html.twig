        $(document).ready(function() {
            $('#recent-orders').DataTable({
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Tous"]],
                "language": {
                    "search": "<i class='fa fa-search'></i> Rechercher:",
                    "lengthMenu": "Afficher _MENU_ entr√©es",
                    "info": "Affichage _START_ √† _END_ sur _TOTAL_ entr√©es",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "<i class='fa fa-chevron-right'></i>",
                        "previous": "<i class='fa fa-chevron-left'></i>"
                    },
                    "emptyTable": "Aucune donn√©e disponible",
                    "infoEmpty": "Aucune entr√©e √† afficher"
                },
                "responsive": true,
                "autoWidth": false,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>><"table-responsive"t><"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
