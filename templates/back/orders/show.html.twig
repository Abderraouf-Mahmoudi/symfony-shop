{% extends 'back/base.html.twig' %}

{% block title %}Détails de la commande{% endblock %}

{% block content %}
<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Détails de la commande</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="{{ path('admin_dashboard') }}">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="{{ path('admin_orders_index') }}">Commandes</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <span>Commande #{{ order.id }}</span>
            </li>
        </ul>
    </div>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Commande #{{ order.id }}</h4>
                        <div class="ml-auto">
                            <a href="{{ path('admin_orders_pdf', {'id': order.id}) }}" class="btn btn-danger btn-sm shadow-sm rounded-pill mr-2" target="_blank"><i class="fas fa-file-pdf mr-2"></i> Télécharger le reçu</a>
                            <a href="{{ path('admin_orders_index') }}" class="btn btn-primary btn-sm shadow-sm rounded-pill"><i class="fas fa-arrow-left mr-2"></i> Retour aux commandes</a>
                        </div>
                    </div>
                </div>
                
                <div class="card-header bg-light">
                    <div class="row align-items-center">
                        <div class="col-md-12 mb-2">
                            <h5 class="mb-0">Modifier le statut de la commande</h5>
                        </div>
                        <div class="col-md-12 d-flex flex-wrap justify-content-center">
                            <form method="GET" action="{{ path('admin_orders_update_status', {'id': order.id, 'status': 'pending'}) }}" class="mx-2 mb-2" onsubmit="return confirmStatusChange('pending');">
                                <button type="submit" class="btn btn-warning btn-md shadow-sm rounded-pill px-4"><i class="fas fa-clock mr-2"></i> Marquer comme En attente</button>
                            </form>
                            <form method="GET" action="{{ path('admin_orders_update_status', {'id': order.id, 'status': 'done'}) }}" class="mx-2 mb-2" onsubmit="return confirmStatusChange('done');">
                                <button type="submit" class="btn btn-success btn-md shadow-sm rounded-pill px-4"><i class="fas fa-check-circle mr-2"></i> Marquer comme Terminée</button>
                            </form>
                            <form method="GET" action="{{ path('admin_orders_update_status', {'id': order.id, 'status': 'canceled'}) }}" class="mx-2 mb-2" onsubmit="return confirmStatusChange('canceled');">
                                <button type="submit" class="btn btn-danger btn-md shadow-sm rounded-pill px-4"><i class="fas fa-times-circle mr-2"></i> Marquer comme Annulée</button>
                            </form>
                            <form method="POST" action="{{ path('admin_orders_delete', {'id': order.id}) }}" class="mx-2 mb-2" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette commande?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                <button type="submit" class="btn btn-danger btn-md shadow-sm rounded-pill px-4"><i class="fas fa-trash-alt mr-2"></i> Supprimer la commande</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-stats card-round">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div class="icon-big text-center icon-primary bubble-shadow-small">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ml-3 ml-sm-0">
                                            <div class="numbers">
                                                <p class="card-category">Informations client</p>
                                                <h4 class="card-title">{{ order.customerName }}</h4>
                                                <p class="card-text">{{ order.customerEmail }}</p>
                                                <p class="card-text">Téléphone: {{ order.phone }}</p>
                                                <p class="card-text">Taille: {{ order.size }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card card-stats card-round">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div class="icon-big text-center icon-info bubble-shadow-small">
                                                <i class="fas fa-shipping-fast"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ml-3 ml-sm-0">
                                            <div class="numbers">
                                                <p class="card-category">Statut</p>
                                                <form method="GET" id="statusForm">
                                                    <select name="status" class="form-control form-control-sm" onchange="updateOrderStatus(this.value);">
                                                        <option value="pending" {{ order.status == 'pending' ? 'selected' : '' }}>En attente</option>
                                                        <option value="done" {{ order.status == 'done' ? 'selected' : '' }}>Terminée</option>
                                                        <option value="canceled" {{ order.status == 'canceled' ? 'selected' : '' }}>Annulée</option>
                                                    </select>
                                                </form>
                                                <p class="card-text mt-2">Date de commande: {{ order.createdAt|date('Y-m-d H:i') }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-stats card-round">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div class="icon-big text-center icon-success bubble-shadow-small">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ml-3 ml-sm-0">
                                            <div class="numbers">
                                                <p class="card-category">Adresse de livraison</p>
                                                <p class="card-text">{{ order.shippingAddress }}</p>
                                                <p class="card-text">Ville: {{ order.city }}</p>
                                                <p class="card-text">Code postal: {{ order.postalCode }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card card-stats card-round">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-icon">
                                            <div class="icon-big text-center icon-secondary bubble-shadow-small">
                                                <i class="fas fa-credit-card"></i>
                                            </div>
                                        </div>
                                        <div class="col col-stats ml-3 ml-sm-0">
                                            <div class="numbers">
                                                <p class="card-category">Adresse de facturation</p>
                                                <p class="card-text">{{ order.billingAddress ? order.billingAddress : order.shippingAddress }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="separator-solid"></div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Articles commandés</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Produit</th>
                                            <th>Taille</th>
                                            <th>Couleur</th>
                                            <th>Quantité</th>
                                            <th>Prix</th>
                                            <th class="text-right">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in order.items %}
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        {% if item.product.getPrimaryImage() %}
                                                            <img src="{{ asset('uploads/products/' ~ item.product.getPrimaryImage().imagePath) }}" alt="{{ item.product.name }}" class="mr-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                        {% else %}
                                                            <div class="mr-3" style="width: 50px; height: 50px; background-color: #eee; display: flex; align-items: center; justify-content: center;">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                        <span>{{ item.product.name }}</span>
                                                    </div>
                                                </td>
                                                <td>{{ item.size }}</td>
                                                <td>
                                                    {% if item.colorName is defined and item.colorName %}
                                                        <div class="d-flex align-items-center">
                                                            <span class="color-sample mr-2" style="background-color: {{ item.colorCode }}; width: 15px; height: 15px; display: inline-block; border-radius: 50%; border: 1px solid #ddd;"></span>
                                                            <span>{{ item.colorName }}</span>
                                                        </div>
                                                    {% else %}
                                                        --
                                                    {% endif %}
                                                </td>
                                                <td>{{ item.quantity }}</td>
                                                <td>{{ item.price }} TND</td>
                                                <td class="text-right">{{ (item.price * item.quantity)|number_format(2) }} TND</td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="5" class="text-center">Aucun article trouvé pour cette commande</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="4" class="text-right"><strong>Total:</strong></td>
                                            <td class="text-right"><strong>{{ order.totalAmount }} TND</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#recent-orders').DataTable({
                "pageLength": 5,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
            });
        });
        
        function updateOrderStatus(status) {
            if (confirm('Êtes-vous sûr de vouloir changer le statut de la commande en ' + status + ' ?')) {
                window.location.href = '{{ path('admin_orders_update_status', {'id': order.id, 'status': 'STATUS_PLACEHOLDER'}) }}'.replace('STATUS_PLACEHOLDER', status);
            }
        }
    </script>
{% endblock %}
