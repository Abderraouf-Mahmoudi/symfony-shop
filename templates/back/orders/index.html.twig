{% extends 'back/base.html.twig' %}

{% block title %}Orders Management{% endblock %}

{% block content %}
<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Orders Management</h4>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Orders List</h4>
                    </div>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <div class="table-responsive">
                        <table id="orders-table" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td>{{ order.customerName }}<br><small>{{ order.customerEmail }}</small></td>
                                        <td>${{ order.totalAmount }}</td>
                                        <td>
                                            {% if order.status == 'pending' %}
                                                <span class="badge badge-warning">Pending</span>
                                            {% elseif order.status == 'done' %}
                                                <span class="badge badge-success">Done</span>
                                            {% elseif order.status == 'canceled' %}
                                                <span class="badge badge-danger">Canceled</span>
                                            {% else %}
                                                <span class="badge badge-secondary">{{ order.status|capitalize }}</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a href="{{ path('admin_orders_show', {'id': order.id}) }}" class="btn btn-link btn-info btn-lg" data-toggle="tooltip" title="View Order">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                
                                                <form method="POST" action="{{ path('admin_orders_delete', {'id': order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');" style="display: inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                                    <button type="submit" class="btn btn-link btn-danger" data-toggle="tooltip" title="Delete Order">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">No orders found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#orders-table').DataTable({
                "pageLength": 10,
                "order": [[0, "desc"]],
                "language": {
                    "lengthMenu": "Show _MENU_ orders per page",
                    "zeroRecords": "No matching orders found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No orders available",
                    "infoFiltered": "(filtered from _MAX_ total orders)"
                }
            });
        });
    </script>
{% endblock %}
