{% extends 'back/base.html.twig' %}

{% block title %}Gestion des commandes{% endblock %}

{% block content %}
<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Gestion des commandes</h4>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Liste des commandes</h4>
                    </div>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <!-- Formulaire de recherche par numéro de téléphone -->
                    <div class="mb-4">
                        <form method="GET" action="{{ path('admin_orders_index') }}" class="form-inline">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                </div>
                                <input type="text" name="phone" class="form-control" placeholder="Rechercher par numéro de téléphone" value="{{ search_phone|default('') }}">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">Rechercher</button>
                                    {% if search_phone is defined and search_phone %}
                                        <a href="{{ path('admin_orders_index') }}" class="btn btn-secondary">Effacer</a>
                                    {% endif %}
                                </div>
                            </div>
                        </form>
                    </div>
                    
                    <div class="table-responsive">
                        <table id="orders-table" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>Téléphone</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td>{{ order.customerName }}<br><small>{{ order.customerEmail }}</small></td>
                                        <td>{{ order.phone ? order.phone : 'N/A' }}</td>
                                        <td>{{ order.totalAmount }} TND</td>
                                        <td>
                                            {% if order.status == 'pending' %}
                                                <span class="badge badge-warning">En attente</span>
                                            {% elseif order.status == 'done' %}
                                                <span class="badge badge-success">Terminée</span>
                                            {% elseif order.status == 'canceled' %}
                                                <span class="badge badge-danger">Annulée</span>
                                            {% else %}
                                                <span class="badge badge-secondary">{{ order.status|capitalize }}</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                                        <td>
                                            <div class="form-button-action d-flex justify-content-center">
                                                <a href="{{ path('admin_orders_show', {'id': order.id}) }}" class="btn btn-info btn-sm rounded-circle shadow-sm mx-2" data-toggle="tooltip" title="Voir la commande">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                
                                                <a href="{{ path('admin_orders_pdf', {'id': order.id}) }}" class="btn btn-secondary btn-sm rounded-circle shadow-sm mx-2" data-toggle="tooltip" title="Télécharger le reçu">
                                                    <i class="fa fa-file-pdf"></i>
                                                </a>
                                                
                                                <form method="POST" action="{{ path('admin_orders_delete', {'id': order.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette commande?');" class="mx-2">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                                    <button type="submit" class="btn btn-danger btn-sm rounded-circle shadow-sm" data-toggle="tooltip" title="Supprimer la commande">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">Aucune commande trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#orders-table').DataTable({
                "pageLength": 10,
                "order": [[0, "desc"]],
                "language": {
                    "lengthMenu": "Afficher _MENU_ commandes par page",
                    "zeroRecords": "Aucune commande correspondante trouvée",
                    "info": "Page _PAGE_ sur _PAGES_",
                    "infoEmpty": "Aucune commande disponible",
                    "infoFiltered": "(filtré sur _MAX_ commandes au total)",
                    "search": "Rechercher:",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "Suivant",
                        "previous": "Précédent"
                    }
                }
            });
        });
    </script>
{% endblock %}
