{% extends 'back/base.html.twig' %}

{% block title %}Products Management{% endblock %}

{% block content %}
<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Products Management</h4>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Products List</h4>
                        <a href="{{ path('admin_products_new') }}" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Add Product
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <div class="table-responsive">
                        <table id="products-table" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td>{{ product.id }}</td>
                                        <td>
                                            {% if product.imagePath %}
                                                <img src="{{ asset('uploads/products/' ~ product.imagePath) }}" alt="{{ product.name }}" width="50">
                                            {% else %}
                                                <span class="badge badge-warning">No Image</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ product.name }}</td>
                                        <td>{{ product.category }}</td>
                                        <td>${{ product.price }}</td>
                                        <td>{{ product.stock }}</td>
                                        <td>{{ product.createdAt|date('Y-m-d') }}</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a href="{{ path('admin_products_edit', {'id': product.id}) }}" class="btn btn-link btn-primary btn-lg" data-toggle="tooltip" title="Edit Product">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                
                                                <form method="POST" action="{{ path('admin_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display: inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                    <button type="submit" class="btn btn-link btn-danger" data-toggle="tooltip" title="Delete Product">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center">No products found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#products-table').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Show _MENU_ products per page",
                    "zeroRecords": "No matching products found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No products available",
                    "infoFiltered": "(filtered from _MAX_ total products)"
                }
            });
        });
    </script>
{% endblock %}
