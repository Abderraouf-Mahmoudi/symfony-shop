{% extends 'back/base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block content %}
<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">Gestion des produits</h4>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Liste des produits</h4>
                        <a href="{{ path('admin_products_new') }}" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Ajouter un produit
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    
                    <div class="table-responsive">
                        <table id="products-table" class="display table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Nom</th>
                                    <th>Catégorie</th>
                                    <th>Prix</th>
                                    <th>Stock</th>
                                    <th>Créé le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td>{{ product.id }}</td>
                                        <td>
                                            {% if product.primaryImage %}
                                                <img src="{{ asset('uploads/products/' ~ product.primaryImage.imagePath) }}" alt="{{ product.name }}" width="50">
                                            {% else %}
                                                <span class="badge badge-warning">Aucune image</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ product.name }}</td>
                                        <td>{{ product.category }}</td>
                                        <td>{{ product.price }} TND</td>
                                        <td>{{ product.stock }}</td>
                                        <td>{{ product.createdAt|date('Y-m-d') }}</td>
                                        <td>
                                            <div class="form-button-action">
                                                <a href="{{ path('admin_products_edit', {'id': product.id}) }}" class="btn btn-link btn-primary btn-lg" data-toggle="tooltip" title="Modifier le produit">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                
                                                <form method="POST" action="{{ path('admin_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit?');" style="display: inline-block;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                    <button type="submit" class="btn btn-link btn-danger" data-toggle="tooltip" title="Supprimer le produit">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center">Aucun produit trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#products-table').DataTable({
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Afficher _MENU_ produits par page",
                    "zeroRecords": "Aucun produit correspondant trouvé",
                    "info": "Page _PAGE_ sur _PAGES_",
                    "infoEmpty": "Aucun produit disponible",
                    "infoFiltered": "(filtré sur _MAX_ produits au total)",
                    "search": "Rechercher:",
                    "paginate": {
                        "first": "Premier",
                        "last": "Dernier",
                        "next": "Suivant",
                        "previous": "Précédent"
                    }
                }
            });
        });
    </script>
{% endblock %}
