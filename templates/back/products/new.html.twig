{% extends 'back/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Color input styles */
        input[type="color"] {
            height: 38px;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        input[type="color"]:hover {
            transform: scale(1.05);
        }
        .color-preview {
            transition: all 0.3s ease;
        }
        .color-preview:hover {
            transform: scale(1.2);
        }
    </style>
