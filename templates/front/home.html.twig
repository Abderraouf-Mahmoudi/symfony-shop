    <script>
        // Category filter handling - runs after jQuery is loaded
        $(document).ready(function() {
            // Category filter handling
            $('.filter-tope-group button').on('click', function() {
                // Remove active class from all buttons
                $('.filter-tope-group button').removeClass('how-active1');
                // Add active class to clicked button
                $(this).addClass('how-active1');
                
                var filterValue = $(this).attr('data-filter');
                
                if (filterValue === '*') {
                    // Show all products
                    $('.isotope-grid .isotope-item').show();
                    $('#no-products-message').hide();
                } else {
                    // Hide all products first
                    $('.isotope-grid .isotope-item').hide();
                    // Show only filtered products
                    var filteredItems = $('.isotope-grid .isotope-item' + filterValue);
                    filteredItems.show();
                    
                    // Check if any products are visible
                    if (filteredItems.length == 0) {
                        $('#no-products-message').show();
                    } else {
                        $('#no-products-message').hide();
                    }
                }
            });
        });
    </script>
