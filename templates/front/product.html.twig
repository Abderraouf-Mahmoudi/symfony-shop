                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="{{ path('front_product_detail') }}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">Product Name</a>
