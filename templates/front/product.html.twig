{% extends 'base_front.html.twig' %}

{% block title %}Produits{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Fix for product card alignment */
    .block2 {
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .block2-pic {
        height: 300px; /* Fixed height for all product images */
        overflow: hidden;
        position: relative;
    }
    .block2-pic img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Maintain aspect ratio while filling container */
        object-position: center;
    }
    .block2-txt {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    .isotope-grid .col-sm-6,
    .isotope-grid .col-md-4,
    .isotope-grid .col-lg-3 {
        display: flex;
        margin-bottom: 15px;
    }
</style>
{% endblock stylesheets %}

{% block body %}
    <!-- Title page -->
    <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('{{ asset('front/images/bg-02.jpg') }}');">
        <h2 class="ltext-105 cl0 txt-center">
            Produits
        </h2>
    </section>
    <!-- Content page -->
    <section class="bg0 p-t-23 p-b-140">
        <div class="container">
            <div class="row isotope-grid">
                {% if products is empty %}
                    <div class="col-12 p-tb-100 text-center">
                        <h3 class="ltext-105 cl5">Produits à venir</h3>
                        <p class="stext-113 cl6 p-t-26">Nous travaillons à ajouter d'excellents produits pour vous. Revenez bientôt !</p>
                    </div>
                {% else %}
                    {% for product in products %}
                        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item {{ product.category|lower }}">
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    {% if product.primaryImage %}
                                        <img src="{{ asset('uploads/products/' ~ product.primaryImage.imagePath) }}" alt="{{ product.name }}">
                                    {% else %}
                                        <img src="{{ asset('back/img/placeholder.jpg') }}" alt="{{ product.name }}">
                                    {% endif %}
                                    <a href="{{ path('front_product_detail', {'id': product.id}) }}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                        Aperçu rapide
                                    </a>
                                </div>
                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l">
                                        <a href="{{ path('front_product_detail', {'id': product.id}) }}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            {{ product.name }}
                                        </a>
                                        <span class="stext-105 cl3">{{ product.price|number_format(2, '.', ',') }} TND</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}

