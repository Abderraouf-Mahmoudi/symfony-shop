{% extends 'base_front.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <!-- Title page -->
    <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('{{ asset('front/images/bg-02.jpg') }}');">
        <h2 class="ltext-105 cl0 txt-center">
            {{ product.name }}
        </h2>
    </section>
    <!-- Content page -->
    <section class="sec-product-detail bg0 p-t-65 p-b-60">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-7 p-b-30">
                    <div class="p-l-25 p-r-30 p-lr-0-lg">
                        <div class="wrap-slick3 flex-sb flex-w">
                            <div class="wrap-slick3-dots"></div>
                            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
                            <div class="slick3 gallery-lb">
                                <div class="item-slick3" data-thumb="{% if product.imagePath %}{{ asset('uploads/products/' ~ product.imagePath) }}{% else %}{{ asset('back/img/placeholder.jpg') }}{% endif %}">
                                    <div class="wrap-pic-w pos-relative">
                                        {% if product.imagePath %}
                                            <img src="{{ asset('uploads/products/' ~ product.imagePath) }}" alt="{{ product.name }}">
                                        {% else %}
                                            <img src="{{ asset('back/img/placeholder.jpg') }}" alt="{{ product.name }}">
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-5 p-b-30">
                    <div class="p-r-50 p-t-5 p-lr-0-lg">
                        <h4 class="mtext-105 cl2 js-name-detail p-b-14">{{ product.name }}</h4>
                        <span class="mtext-106 cl2">${{ product.price|number_format(2, '.', ',') }}</span>
                        <p class="stext-102 cl3 p-t-23">{{ product.description }}</p>
                        
                        <div class="p-t-33">
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Category
                                </div>
                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <span class="stext-102 cl3">{{ product.category }}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10 p-t-20">
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <a href="{{ path('front_cart') }}" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                        Add to cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

